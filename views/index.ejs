<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>URL Shortener</title>
</head>
<body>
    <div class="container">
        <h1>URL Shortener</h1>
        <form action="/shortUrls" method="POST" class="form-inline my-4">
            <label for="fullUrl" class="visually-hidden">Url</label>
            <input placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2" required>
            <button class="btn btn-success" type="submit">Shrink</button>
            <!-- <div class="input-group">
                <input type="url" class="form-control" placeholder="Url" aria-label="Url" aria-describedby="button-addon">
                <button class="btn btn-success" type="button" id="button-addon">Button</button>
            </div> -->
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full uRL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                        <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                        <td><%= shortUrl.clicks %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>